---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/common/Section.astro';
import Card from '../components/common/Card.astro';
import Badge from '../components/common/Badge.astro';
import Button from '../components/common/Button.astro';
import Timeline from '../components/about/Timeline.astro';
import experience from '../data/experience.json';
import certifications from '../data/certifications.json';
import education from '../data/education.json';
import skills from '../data/skills.json';

const featuredCertifications = certifications.certifications.filter((c) => c.featured);
---

<BaseLayout title="CV" description="Currículo de Danilo Silva, Engenheiro de Software Sênior com experiência em .NET, Angular, arquitetura de software e modernização de sistemas legados.">
  <!-- Hero -->
  <section class="bg-gradient-to-b from-primary-50 to-white py-16 sm:py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-6">
        <div class="max-w-3xl">
          <h1 class="text-3xl sm:text-4xl font-bold text-neutral-900 mb-2">
            Danilo Silva
          </h1>
          <p class="text-xl text-primary-600 font-medium mb-4">
            Engenheiro de Software Sênior
          </p>
          <p class="text-neutral-600 leading-relaxed">
            Quase 20 anos de experiência em TI, mais de 13 dedicados ao desenvolvimento e arquitetura de software. Especialista em .NET, Angular, Clean Architecture, modernização de legados e entrega de soluções escaláveis em ambientes corporativos complexos.
          </p>
        </div>
        <div class="flex-shrink-0">
          <Button href="#" variant="secondary" size="lg" class="w-full md:w-auto">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Baixar PDF (em breve)
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills -->
  <Section title="Competências Técnicas">
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3 sm:gap-6">
      {skills.categories.map((category) => (
        <Card padding="md">
          <h3 class="font-semibold text-neutral-900 mb-3">
            {category.name}
          </h3>
          <div class="flex flex-wrap gap-2">
            {category.skills.map((skill) => (
              <Badge variant={skill.level === 'expert' ? 'primary' : skill.level === 'advanced' ? 'info' : 'default'} size="sm">
                {skill.name}
              </Badge>
            ))}
          </div>
        </Card>
      ))}
    </div>
  </Section>

  <!-- Experiencia -->
  <Section title="Experiência Profissional" class="bg-neutral-50">
    <Timeline experiences={experience.experiences} />
  </Section>

  <!-- Certificacoes -->
  <Section title="Certificações">
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3 sm:gap-6">
      {featuredCertifications.map((cert) => (
        <Card padding="md">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-12 h-12 bg-neutral-100 rounded-lg flex items-center justify-center">
              {cert.icon === 'aws' && (
                <span class="text-lg font-bold text-orange-500">AWS</span>
              )}
              {cert.icon === 'azure' && (
                <span class="text-lg font-bold text-blue-500">AZ</span>
              )}
              {cert.icon === 'oracle' && (
                <span class="text-lg font-bold text-red-500">OCA</span>
              )}
              {cert.icon === 'ibm' && (
                <span class="text-lg font-bold text-blue-600">IBM</span>
              )}
              {cert.icon === 'security' && (
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              )}
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="font-semibold text-neutral-900 text-sm mb-1 leading-tight">
                {cert.name}
              </h3>
              <p class="text-sm text-neutral-500">
                {cert.issuer}
              </p>
            </div>
          </div>
        </Card>
      ))}
    </div>
  </Section>

  <!-- Formacao -->
  <Section
    title="Formação Acadêmica"
    class="bg-neutral-50"
  >
    <div class="max-w-2xl mx-auto space-y-6">
      {education.education.map((edu) => (
        <Card>
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 14l9-5-9-5-9 5 9 5z" />
                <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-neutral-900">
                {edu.degree}
              </h3>
              <p class="text-primary-600">
                {edu.field}
              </p>
              <p class="text-sm text-neutral-500">
                {edu.institution}
              </p>
              <p class="text-sm text-neutral-400">
                {edu.period.end}
              </p>
            </div>
          </div>
        </Card>
      ))}
    </div>
  </Section>
</BaseLayout>
