---
import Badge from '../common/Badge.astro';
import Button from '../common/Button.astro';
import type { Project } from '../../types';

interface Props {
  project: Project;
  showHighlights?: boolean;
}

const { project, showHighlights = false } = Astro.props;

const statusLabels: Record<string, string> = {
  active: 'Ativo',
  development: 'Em desenvolvimento',
  experiment: 'Experimento',
  archived: 'Arquivado'
};

const statusVariants: Record<string, 'success' | 'warning' | 'info' | 'default'> = {
  active: 'success',
  development: 'warning',
  experiment: 'info',
  archived: 'default'
};

const typeLabels: Record<string, string> = {
  personal: 'Projeto pessoal',
  volunteer: 'Projeto volunt√°rio',
  opensource: 'Open source'
};
---

<article class="bg-white rounded-xl border border-neutral-200 overflow-hidden transition-all duration-200 hover:shadow-lg hover:border-neutral-300 h-full flex flex-col">
  <div class="p-6 flex-1 flex flex-col">
    <div class="flex items-start justify-between gap-4 mb-3">
      <div>
        <p class="text-xs text-neutral-500 uppercase tracking-wide mb-1">
          {typeLabels[project.type]}
        </p>
        <h3 class="text-xl font-semibold text-neutral-900">
          {project.title}
        </h3>
      </div>
      <Badge variant={statusVariants[project.status]} size="sm">
        {statusLabels[project.status]}
      </Badge>
    </div>

    <p class="text-neutral-600 mb-4 flex-1">
      {project.description}
    </p>

    {showHighlights && project.highlights && project.highlights.length > 0 && (
      <ul class="mb-4 space-y-1">
        {project.highlights.map((highlight) => (
          <li class="flex items-start gap-2 text-sm text-neutral-600">
            <svg class="w-4 h-4 text-primary-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>{highlight}</span>
          </li>
        ))}
      </ul>
    )}

    <div class="flex flex-wrap gap-2 mb-6">
      {project.tags.map((tag) => (
        <Badge>{tag}</Badge>
      ))}
    </div>

    <div class="flex gap-3 mt-auto">
      {project.links.demo && (
        <Button href={project.links.demo} size="sm" external>
          Ver Demo
        </Button>
      )}
      {project.links.github && (
        <Button href={project.links.github} variant="secondary" size="sm" external>
          GitHub
        </Button>
      )}
    </div>
  </div>
</article>
