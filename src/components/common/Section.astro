---
interface Props {
  id?: string;
  title?: string;
  subtitle?: string;
  class?: string;
  containerClass?: string;
  centered?: boolean;
}

const {
  id,
  title,
  subtitle,
  class: className = '',
  containerClass = '',
  centered = true
} = Astro.props;
---

<section id={id} class:list={["py-16 sm:py-20", className]}>
  <div class:list={["max-w-6xl mx-auto px-4 sm:px-6 lg:px-8", containerClass]}>
    {(title || subtitle) && (
      <div class:list={["mb-12", centered && "text-center"]}>
        {title && (
          <h2 class="text-3xl sm:text-4xl font-bold text-neutral-900">
            {title}
          </h2>
        )}
        {subtitle && (
          <p class:list={[
            "mt-4 text-lg text-neutral-600",
            centered && "max-w-2xl mx-auto"
          ]}>
            {subtitle}
          </p>
        )}
      </div>
    )}
    <slot />
  </div>
</section>
