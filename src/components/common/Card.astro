---
interface Props {
  class?: string;
  hover?: boolean;
  padding?: 'none' | 'sm' | 'md' | 'lg';
}

const {
  class: className = '',
  hover = true,
  padding = 'md'
} = Astro.props;

const paddingClasses = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8'
};
---

<div class:list={[
  "bg-white rounded-xl border border-neutral-200",
  paddingClasses[padding],
  hover && "transition-all duration-200 hover:shadow-lg hover:border-neutral-300",
  className
]}>
  <slot />
</div>
